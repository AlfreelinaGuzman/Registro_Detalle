<Window x:Class="Registro_Detalle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registro_Detalle"
        mc:Ignorable="d"
        Title="Menu Principal" Height="200" Width="450">
    <Grid>
        <StackPanel>
            <Menu Height = "20" VerticalAlignment="Top">
        
                <MenuItem Header= "Registros" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Top">
                    <MenuItem x:Name="Registrar_Orden" Header="Registrar Orden" Click= "RegistrarOrden_Click"/>
                   
                </MenuItem>

                <MenuItem Header= "Consultas" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top">
                   <MenuItem x:Name="Consultar_Orden" Header="Consultar Orden" Click="ConsultarOrden_Click"/>
                         <!--<MenuItem x:Name="Consultar_Prestamo" Header="Consultar Prestamo" Click="ConsultarPrestamo_Click"/>-->
                </MenuItem>
            </Menu>
        </StackPanel>  
    </Grid>
</Window>
